# Google Gemini Configuration (Required for production mode)
# Replace with your Google/Gemini API key. Do NOT commit real keys.
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
# Alternative environment variable name
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_HERE

# Pinecone Configuration (Optional - enables production vector storage)
# Replace with your Pinecone API key and environment (e.g. us-west1-gcp-free)
PINECONE_API_KEY=YOUR_PINECONE_API_KEY_HERE
PINECONE_ENVIRONMENT=YOUR_PINECONE_ENVIRONMENT_HERE
PINECONE_INDEX_NAME=cognidocs

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Set to true for demo mode without API keys
DEMO_MODE=true

# CORS Configuration (adjust for your frontend URL)
FRONTEND_URL=http://localhost:3000

# Important: keep real credentials out of source control. Use deployment platform
# environment variables (Render/Vercel) or a local .env file which is gitignored.




